<!-- Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Hoşgeldiniz Lütfen Giriş Yapınız";
}
<h2>@ViewData["Title"]</h2>

 <div class="container mt-5">
    <div class="jumbotron">
        <form method="post" asp-action="Index" asp-controller="User">
            <div class="mb-3">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" id="Email">
                <span asp-validation-for="Email"></span>
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
                    
            </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>
 </div>
    
        





<p>Eğer kayıtlı değilseniz, <a asp-action="Register" asp-controller="Home">kayıt olunuz.</a></p>

<style>
    h2 {
        color: seagreen;
        border-bottom-style: groove;
        border-bottom-color: seagreen;
        text-align: center;
    }
</style>

